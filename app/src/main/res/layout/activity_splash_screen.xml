<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".ui.activity.NewsActivity">


        <ImageView
            android:id="@+id/SplashScreen_imageView_logo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_32sdp"
            android:src="@drawable/newsapplogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/SplashScreen_LottieAnimationView2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_170sdp"
            android:layout_marginTop="@dimen/_4sdp"
            app:layout_constraintEnd_toEndOf="@+id/SplashScreen_imageView_logo"
            app:layout_constraintStart_toStartOf="@+id/SplashScreen_imageView_logo"
            app:layout_constraintTop_toBottomOf="@+id/SplashScreen_imageView_logo"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/newsanimation"
            app:lottie_url="REPLACE_JSON_URL" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/SplashScreen_LottieAnimationView3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/SplashScreen_LottieAnimationView2"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/card1"
            app:lottie_url="REPLACE_JSON_URL" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>